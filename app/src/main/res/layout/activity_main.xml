<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_4_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/number_7_button"
            app:layout_constraintBottom_toTopOf="@+id/number_1_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/number_5_button"
    />
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_5_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/number_8_button"
            app:layout_constraintStart_toEndOf="@+id/number_4_button"
            app:layout_constraintEnd_toStartOf="@+id/number_6_button"
            app:layout_constraintBottom_toTopOf="@+id/number_2_button"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_6_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/number_9_button"
            app:layout_constraintBottom_toTopOf="@+id/number_3_button"
            app:layout_constraintEnd_toStartOf="@+id/add_button"
            app:layout_constraintStart_toEndOf="@+id/number_5_button"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/subs_button"
            app:layout_constraintBottom_toTopOf="@+id/enter_button"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/number_6_button"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_1_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/number_4_button"
            app:layout_constraintBottom_toTopOf="@+id/number_0_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/number_2_button"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dot_button"
            android:onClick="addCharacter"
            app:layout_constraintStart_toEndOf="@+id/number_0_button"
            app:layout_constraintEnd_toStartOf="@+id/ce_button"
            app:layout_constraintTop_toBottomOf="@+id/number_2_button" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_2_button"
            android:onClick="addCharacter"
            app:layout_constraintStart_toEndOf="@+id/number_1_button"
            app:layout_constraintEnd_toStartOf="@+id/number_3_button"
            app:layout_constraintTop_toBottomOf="@+id/number_5_button"
            app:layout_constraintBottom_toTopOf="@+id/dot_button"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_3_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/number_6_button"
            app:layout_constraintBottom_toTopOf="@+id/ce_button"
            app:layout_constraintEnd_toStartOf="@+id/enter_button"
            app:layout_constraintStart_toEndOf="@+id/number_2_button"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:id="@+id/enter_button"
            android:onClick="doEquation"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            app:layout_constraintTop_toBottomOf="@+id/add_button" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_0_button"
            android:onClick="addCharacter"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            app:layout_constraintTop_toBottomOf="@+id/number_1_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/dot_button"/>
    <Button
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ce_button"
            android:onClick="clearEquation"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            app:layout_constraintTop_toBottomOf="@+id/number_3_button"
            app:layout_constraintEnd_toStartOf="@+id/enter_button"
            app:layout_constraintStart_toEndOf="@+id/dot_button"/>
    <Button
            android:text="("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/op_button" android:layout_marginTop="31dp"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/equation_text_view" app:layout_constraintBottom_toTopOf="@+id/div_button"
            app:layout_constraintEnd_toStartOf="@+id/cl_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="192dp" android:layout_marginStart="192dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cl_button" android:layout_marginTop="31dp"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/equation_text_view" app:layout_constraintBottom_toTopOf="@+id/mult_button"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/op_button"
    />
    <Button
            android:text="âˆš"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sqrt_button"
            android:onClick="addSqrt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/equation_text_view"
            app:layout_constraintBottom_toTopOf="@+id/number_7_button"
            app:layout_constraintEnd_toStartOf="@+id/pow_button"/>
    <Button
            android:text="^"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pow_button"
            android:onClick="addCharacter"
            app:layout_constraintStart_toEndOf="@+id/sqrt_button"
            app:layout_constraintEnd_toStartOf="@+id/div_button" android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/equation_text_view"
            app:layout_constraintBottom_toTopOf="@+id/number_8_button"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/op_button"
            app:layout_constraintBottom_toTopOf="@+id/number_9_button"
            app:layout_constraintEnd_toStartOf="@+id/mult_button" app:layout_constraintStart_toEndOf="@+id/pow_button"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mult_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/cl_button" app:layout_constraintBottom_toTopOf="@+id/subs_button"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/div_button"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_8_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/pow_button"
            app:layout_constraintStart_toEndOf="@+id/number_7_button"
            app:layout_constraintEnd_toStartOf="@+id/number_9_button"
            app:layout_constraintBottom_toTopOf="@+id/number_5_button"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_7_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/sqrt_button"
            app:layout_constraintBottom_toTopOf="@+id/number_4_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/number_8_button"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_9_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/div_button"
            app:layout_constraintBottom_toTopOf="@+id/number_6_button"
            app:layout_constraintEnd_toStartOf="@+id/subs_button"
            app:layout_constraintStart_toEndOf="@+id/number_8_button"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subs_button"
            android:onClick="addCharacter"
            app:layout_constraintTop_toBottomOf="@+id/mult_button" app:layout_constraintBottom_toTopOf="@+id/add_button"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/number_9_button"/>
    <TextView
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:id="@+id/equation_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp" app:layout_constraintVertical_bias="0.018"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center|right"
            android:saveEnabled="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="#C0C0C0" android:textColor="#505050" android:textColorHighlight="#808080"
            android:textAllCaps="false" android:text=""/>
</android.support.constraint.ConstraintLayout>