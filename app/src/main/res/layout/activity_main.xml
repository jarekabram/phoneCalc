<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TableLayout android:layout_height="353dp" android:layout_width="319dp"
                 tools:ignore="MissingConstraints"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                 app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                 android:layout_marginStart="8dp"
                 app:layout_constraintHorizontal_bias="0.51" android:id="@+id/tableLayout3">
        <TableRow>
            <Button
                    android:text="("
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/op_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text=")"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/cl_button"
                    android:onClick="addCharacter"/>
        </TableRow>

        <TableRow>
            <Button
                    android:text="âˆš"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/sqrt_button"
                    android:onClick="addSqrt"/>
            <Button
                    android:text="^"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/pow_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="/"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/div_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="*"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/mult_button"
                    android:onClick="addCharacter"/>
        </TableRow>

        <TableRow>
            <Button
                    android:text="7"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_7_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="8"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_8_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="9"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_9_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="-"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/subs_button"
                    android:onClick="addCharacter"/>
        </TableRow>
        <TableRow>
            <Button android:text="4"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_4_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="5"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_5_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="6"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_6_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="+"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/add_button"
                    android:onClick="addCharacter"/>
        </TableRow>
        <TableRow android:layout_width="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_1_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="2"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_2_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="3"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_3_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="CE"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/ce_button"
                    android:onClick="clearEquation"/>
        </TableRow>

        <TableRow android:layout_width="90dp">
            <Button
                    android:text="0"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/number_0_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="."
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:id="@+id/dot_button"
                    android:onClick="addCharacter"/>
            <Button
                    android:text="="
                    android:layout_height="55dp"
                    android:id="@+id/enter_button"
                    android:onClick="doEquation"
                    android:layout_span="2"/>
        </TableRow>


    </TableLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:id="@+id/equation_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center|right"
            android:saveEnabled="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="#C0C0C0" android:textColor="#505050" android:textColorHighlight="#808080"
            android:textAllCaps="false" android:text=""
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.468"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>